<form method="post" asp-action="AnalyticSettings" asp-controller="Dashboard">
    <div id="popup3" class="popup-overlay">
        <div class="popup-content">
            <span class="close-btn3">&times;</span>
            <h2>Estimate Date Prediction Settings</h2>

            <label>Desired hours per day settings.</label>

            <div>
                <label for="estimateDateRadio1">Use Trend Hour Per Day</label>
                <input type="radio" id="estimateDateRadio1" name="hoursPerDay" value="trendHoursPerDay" onclick="toggleDivs1()">

                <label for="estimateDateRadio2">Customize Hour Per Day</label>
                <input type="radio" id="estimateDateRadio2" name="hoursPerDay" value="hoursPerDay" onclick="toggleDivs1()">
            </div>

            <div id="estimateDateDiv1" class="bordered-div hidden">
                Uses Estimated date on analytic boxes, also uses trending hours per day based on user, or custom hours per day.

                <button type="button" id="hrsInfoButton2">Trending Hours?</button>
            </div>

            <div id="estimateDateDiv2" class="bordered-div hidden">
                Input the Hours Per Day:

                <input type="number" id="customHoursPerDay" name="customHoursPerDay" min="1" max="24" placeholder="Enter hours per day">

                <p>Recommended: 8hrs / Day (Usual).</p>
                <button type="button" id="hrsInfoButton">Information!</button>
            </div>

            <button type="submit">Submit</button>
        </div>
    </div>
</form>

<style>
    .hidden {
        display: none;
    }

    .bordered-div {
        border: 1px solid black;
        margin-top: 2rem;
        margin-bottom: 2rem;
        padding: 10px;
    }
</style>

<script>
    function toggleDivs1() {
        // Hide all divs initially
        document.getElementById('estimateDateDiv1').classList.add('hidden');
        document.getElementById('estimateDateDiv2').classList.add('hidden');

        // Show the corresponding div based on the selected radio button
        if (document.getElementById('estimateDateRadio1').checked) {
            document.getElementById('estimateDateDiv1').classList.remove('hidden');
        } else if (document.getElementById('estimateDateRadio2').checked) {
            document.getElementById('estimateDateDiv2').classList.remove('hidden');
        }
    }
</script>

<script>
    document.getElementById('hrsInfoButton').addEventListener('click', function () {
        hrsInfoButton();
    });

    function hrsInfoButton() {
        Swal.fire({
            title: "Input Hours?",
            text: "Input hours that the user can only have in a day on training, if not, select the trend settings.",
            icon: "info",
            showCancelButton: true,
        }).then((result) => {
            if (result.isConfirmed) {
                window.location = '/Dashboard/Dashboard';
            }
        });
    }
</script>

<script>
    document.getElementById('hrsInfoButton2').addEventListener('click', function () {
        hrsInfoButton2();
    });

    function hrsInfoButton2() {
        Swal.fire({
            title: "What's the trending hours per day?",
            text: "The trending hours per day, is hours per day datas from users thats inputted everyday and stored in account, its calculated everyweek(5 working days) and the uses as basis on calculation.",
            icon: "info",
            showCancelButton: true,
        }).then((result) => {
            if (result.isConfirmed) {
                window.location = '/Dashboard/Dashboard';
            }
        });
    }
</script>